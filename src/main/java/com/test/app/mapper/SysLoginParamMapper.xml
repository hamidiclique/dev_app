<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.app.dao.SysloginParamMapper">
 
<resultMap type="sysloginparam" id="result">
<id property="paramId" column="PARAM_ID" />
<result property="paramDesc" column="PARAM_DESC" />
<result property="paramValue" column="PARAM_VALUE" />
<result property="modifyBy" column="MODIFY_BY" />
<result property="modifyTime" column="MODIFY_TIME" />
</resultMap>
 
<select id="getAllSysLoginParams" resultType="sysloginparam" resultMap="result">
SELECT * FROM T_SYS_LOGIN_PARAMS
</select>

<insert id="addSysLoginParam" parameterType="sysloginparam" keyProperty="paramId" useGeneratedKeys="true">
INSERT INTO T_SYS_LOGIN_PARAMS(PARAM_ID, PARAM_DESC, PARAM_VALUE, MODIFY_TIME, MODIFY_BY)
VALUES(SYS_LOGIN_PARAMS_SEQ.nextval, #{paramDesc}, #{paramValue}, #{modifyTime}, #{modifyBy})
</insert>
 
<update id="editSysLoginParam" parameterType="sysloginparam">
UPDATE T_SYS_LOGIN_PARAMS SET PARAM_DESC = #{paramDesc}, PARAM_VALUE = #{paramValue}, MODIFY_TIME = #{modifyTime}, MODIFY_BY = #{modifyBy}
WHERE PARAM_ID = #{paramId}
</update>
 
<select id="findByParamId" parameterType="String" resultType="sysloginparam" resultMap="result">
SELECT * FROM T_SYS_LOGIN_PARAMS WHERE PARAM_ID = #{paramId}
</select>
</mapper>